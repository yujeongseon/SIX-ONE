<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Login">
	<select id="isLogin" resultType="java.util.Map" parameterType="java.util.Map">
		
		SELECT name,password FROM MEMBER WHERE id = #{id}
	</select>
	<select id="iskakaoLogin" resultType="String" parameterType="java.util.Map">
		SELECT name FROM MEMBER WHERE id = #{kakaoid}
	</select>
	
	<select id="isLoginPhone" resultType="String" parameterType="java.util.Map">	
		SELECT name FROM MEMBER WHERE id = #{id} and password = #{password}
	</select>
	
	
</mapper>