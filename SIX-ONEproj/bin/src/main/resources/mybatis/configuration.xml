<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<!-- 환경설정 파일
	데이타베이스 연결정보
	매퍼파일 위치정보
 -->

<configuration>
	
	<!-- db와 카멜케이스 연동되게 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	
	<!-- 자바빈 별칭 -->
	<typeAliases>
		<!-- <typeAlias alias="oneMemoDTO" type="com.kosmo.onememo.service.OneMemoDTO"/> -->
		<typeAlias alias="calendarDTO" type="com.team.sixone.service.CalendarDTO"/>
		<typeAlias alias="exerciseDTO" type="com.team.sixone.service.ExerciseDTO"/>
		<typeAlias alias="subscribeDTO" type="com.team.sixone.service.SubscribeDTO"/>
		<typeAlias alias="routineDTO" type="com.team.sixone.service.RoutineDTO"/>
		<typeAlias alias="proteinDTO" type="com.team.sixone.service.ProteinDTO"/>
		
		<!-- memoCommentDTO 는 결과 Map 에 저장하기때문에 빈 등록 필요 없음 -->
		<typeAlias alias="LoginDTO" type="com.team.sixone.service.LoginDTO"/>
		<typeAlias alias="MemberDTO" type="com.team.sixone.service.MemberDTO"/>
	</typeAliases>
	
	
	
	
	<!-- 매퍼파일 정보 설정 -->
	<mappers>
		<mapper resource="mybatis/calendar.xml" />
		<mapper resource="mybatis/exercise.xml" />
		<mapper resource="mybatis/subscribe.xml" />
		<mapper resource="mybatis/routine.xml" />
		<mapper resource="mybatis/protein.xml" />
		
		<!-- <mapper resource="mybatis/OneMemo.xml" /> -->
		<mapper resource="mybatis/Login.xml"/>
		<mapper resource="mybatis/Member.xml"/>
	</mappers>
</configuration>